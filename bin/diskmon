#!/usr/bin/env ruby
require "rubygems"
require "diskmon"
require "optparse"

OptionParser.new do |opt|
  opt.separator ""
  opt.separator "Options:"
  opt.separator "-------------"
  opt.on('-a', '--agent', 'Agent mode') { Diskmon::Runner.agent }
  opt.on('-s', '--server', 'Server mode') { Diskmon::Runner.server }
  opt.separator ""
  opt.on_tail('-h', '--help')           { puts opt; exit }

  opt.parse!
  end